{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "importHelpers": true,
    "paths": {
      "@core/*": ["app/core/*"],
      "@ux/*": ["app/ux/*"],
      "@cabinet/*": ["app/cabinet/*"],
      "@dashboard/*": ["app/dashboard/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "module": "es2020"
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": false
  }
}
